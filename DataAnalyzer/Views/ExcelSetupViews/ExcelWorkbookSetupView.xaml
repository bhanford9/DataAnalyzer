<UserControl x:Class="DataAnalyzer.Views.ExcelSetupViews.ExcelWorkbookSetupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataAnalyzer.Views.ExcelSetupViews"
             mc:Ignorable="d" 
             Name="ExcelWorkbookSetup"
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <TabControl Style="{StaticResource BaseTabControlStyle}">
      <TabControl.Resources>
        <Style TargetType="TabItem" BasedOn="{StaticResource BaseTabItemStyle}">          
        </Style>
      </TabControl.Resources>
      
      <TabItem Header="Create Actions">
        <local:ActionCreationView DataContext="{Binding DataContext.ActionCreationViewModel, ElementName=ExcelWorkbookSetup}"/>
      </TabItem>

      <TabItem Header="Apply Actions">
        <local:ActionApplicationView DataContext="{Binding DataContext.ActionApplicationViewModel, ElementName=ExcelWorkbookSetup}"/>
      </TabItem>

      <TabItem Header="Summary">
        
      </TabItem>
      
    </TabControl>
  </Grid>
</UserControl>
