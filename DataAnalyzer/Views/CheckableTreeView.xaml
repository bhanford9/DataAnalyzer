<UserControl x:Class="DataAnalyzer.Views.CheckableTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataAnalyzer.Views"
             xmlns:viewmodels="clr-namespace:DataAnalyzer.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="600">
  <HierarchicalDataTemplate
    DataType="{x:Type viewmodels:CheckableTreeViewItem}" 
    ItemsSource="{Binding Children}">
    <StackPanel Orientation="Horizontal">
      <CheckBox IsChecked="{Binding IsChecked}"/>
      <TextBlock Text="{Binding Name}"/>
    </StackPanel>
  </HierarchicalDataTemplate>
</UserControl>
