<UserControl x:Class="DataAnalyzer.Views.StatOrganizerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataAnalyzer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <TabControl>

      <TabItem Header="1. Input Data">
        <!-- This should support multiple differnt input data medias-->
        <local:FileSelectorView Margin="2 5 0 2">
        </local:FileSelectorView>
      </TabItem>

      <TabItem Header="2. Structure">
        <local:ConfigurationCreationTabView/>
      </TabItem>

      <TabItem Header="3. Setup">
        <local:ConfigurationSetupTabView/>
      </TabItem>

    </TabControl>
  </Grid>
</UserControl>
